<div>
	<div ng-controller="resumeCtrl">
	<div class='ruby_code hide-div'>{{email = '<%= current_user.email %>'}}</div>
		<div class="section">
			<div class="container">
				<div class="row">
					<div class="col-md-12">
						<div class="panel panel-primary">
							<div class="panel-heading">
								<h3 class="panel-title">Personal Information</h3>
							</div>
							<div class="panel-body">
								<form role="form" method="get" action="<%= new_experience_path %>">
									<div class="well">
										<div class="row">
										
											<div class="form-group col-md-6" id="double_column">
												<label class="control-label" for="exampleInputEmail1">First Name</label>
												<input class="form-control" id="exampleInputEmail1"
												placeholder="Enter First Name" type="text" ng-model="firstName">
											</div>
											<div class="form-group col-md-6" id="double_column">
												<label class="control-label" for="exampleInputPassword1">Last Name</label>
												<input class="form-control" id="exampleInputPassword1"
												placeholder="Enter Last Name" type="text" ng-model="lastName">
											</div>
										</div>
										<div class="form-group">
											<label class="control-label" for="exampleInputPassword1">Title of Resume</label>
											<input class="form-control" id="exampleInputPassword1" placeholder="Enter the title of your resume"
											type="text" ng-model="jobTitle">
										</div>
										<div class="form-group">
											<label class="control-label" for="exampleInputPassword1">Email</label>
											<input class="form-control" id="exampleInputPassword1" placeholder="Enter Email" type="email" ng-model="email">
										</div>
										<div class="row">
											<div class="form-group col-md-12">
												<label class="control-label" for="exampleInputPassword1">Phone Number</label>
												<input class="form-control" id="exampleInputPassword1" ng-model="phoneNumber" style="width=150px">
											</div>
										</div>
										<div class="row">
											<div class="col-md-6">
											<label class="control-label" for="exampleInputPassword1">Home Address</label>
												<input class="form-control" id="exampleInputPassword1"
												placeholder="Street Address" type="text" ng-model="streetAddress">
											</div>
											<div class="form-group col-md-3" id="double_column">
												<label class="control-label" for="exampleInputPassword1">City</label>
												<input class="form-control" id="exampleInputPassword1"
												placeholder="City" type="text" ng-model="city">
											</div>
											<div class="form-group col-md-3" id="double_column">
												<label class="control-label" for="exampleInputPassword1">State</label>
												<input class="form-control" id="exampleInputPassword1" placeholder="State"
												type="text" ng-model="state">
											</div>
										</div>
										<div class="row">
											<div class="form-group col-md-3" id="double_column">
												<label class="control-label" for="exampleInputPassword1">Address Two</label>
												<input class="form-control" id="exampleInputPassword1"
												placeholder="Address Two" type="text" ng-model="apptNumber">
											</div>
										</div>
										<div class="row">
											<div class="form-group col-md-3" id="double_column">
												<label class="control-label" for="exampleInputPassword1">Github,</label>
												<input class="form-control" id="exampleInputPassword1"
												placeholder="Github" type="text" ng-model="github">
											</div>
											<div class="form-group col-md-3" id="double_column">
												<label class="control-label" for="exampleInputPassword1">Personal Website/Blog</label>
												<input class="form-control" id="exampleInputPassword1"
												placeholder="Blog" type="text" ng-model="blog">
											</div>
											<div class="form-group col-md-3" id="double_column">
												<label class="control-label" for="exampleInputPassword1">Twitter,</label>
												<input class="form-control" id="exampleInputPassword1"
												placeholder="Twitter" type="text" ng-model="twitter">
											</div>
											<div class="form-group col-md-3" id="double_column">
												<label class="control-label" for="exampleInputPassword1">Linkedin,</label>
												<input class="form-control" id="exampleInputPassword1"
												placeholder="Linkedin" type="text" ng-model="linkedin">
											</div>
										</div>
										<div class="row">
											<div class="col-md-12">
												<label class="control-label" for="exampleInputPassword1">Short Bio / About you</label>
												<textarea class='form-control short-bio-box' placeholder="About Me" type="textarea" ng-model="shortBio">Enter your short bio here...</textarea>
											</div>
										</div>
										<div class="row">
											<div class="form-group col-md-3 col-md-offset-9 push-buttons">
												<!-- <a href=<%= new_experience_path %>> -->
										        <button type="submit" class='btn btn-lg btn-success fa fa-thumbs-o-up' style='width: 100%' ng-click="addPersonalInfo(firstName, lastName, jobTitle, email, phoneNumber, github, blog, twitter, linkedin, streetAddress, city, state, apptNumber, shortBio)">&nbsp;&nbsp;&nbsp;&nbsp;Submit</button>
										        <!-- </a> -->
										    </div>
										</div>
									</div><!-- end of well -->
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- Below is for the user feedback modal -->
		  <div class="splat">
		    <%= render '../views/layouts/feed_back' %>
		  </div>
	</div>
</div>